<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CombinationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/back" />

            <!-- Title -->
            <TextView
                android:id="@+id/text_skin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combination Skin"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@id/btn_back" />

            <!-- Product Title -->
            <TextView
                android:id="@+id/text_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salicylic Acid 2% Solution"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/text_skin_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <!-- Product Image -->
            <ImageView
                android:id="@+id/image_product"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@drawable/salycilic_acid"
                android:layout_below="@id/text_product_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <!-- Favorite Button -->
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_heart"
                android:background="@android:color/transparent"
                android:layout_below="@id/image_product"
                android:layout_alignStart="@id/image_product"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/heart" />

            <!-- Bag Button -->
            <ImageButton
                android:id="@+id/btn_bag"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_shopping_bag_24"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/btn_favorite"
                android:layout_alignEnd="@id/image_product"
                android:contentDescription="@string/bag" />

            <!-- Description -->
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salicylic Acid 2% Solution is a water-based serum made with an optimum concentration of salicylic acid which targets textural irregularities while removing dead skin cells that can clog pores. And because it promotes exfoliation, this solution helps visibly reduce congestion, giving way to brighter, clearer skin."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_below="@id/btn_favorite"
                android:layout_marginTop="16dp" />

            <!-- How to Use Title -->
            <TextView
                android:id="@+id/text_how_to_use_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to use"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@id/text_description"
                android:layout_marginTop="16dp" />

            <!-- How to Use Content -->
            <TextView
                android:id="@+id/text_how_to_use_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Apply once daily in the evening.\n•Apply a small dot to the target area or apply a small amount over the face for general use.\n•Do not use on sensitive, peeling or compromised skin. Avoid the eye contour and contact with eyes.\n•Patch testing prior to use is advised: Apply the product as directed to a small area once a day for three days to test if you are sensitive to this product.\n•If you develop irritation, hives, swelling of eyes and mouth, blistering, or diﬃculty breathing, rinse oﬀ, cease use, and consult a physician right away.\n•Keep out of reach of children.\n•Sunburn Alert: This product contains a beta hydroxy acid (BHA) that may increase your skin's sensitivity to the sun and particularly the possibility of sunburn.\n•Use a sunscreen, wear protective clothing, and limit sun exposure while using this product and for a week afterwards."
                android:textSize="14sp"
                android:layout_below="@id/text_how_to_use_title"
                android:layout_marginTop="8dp" />

            <!-- Info Row -->
            <LinearLayout
                android:id="@+id/layout_info_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@id/text_how_to_use_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When to use"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use in PM" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good for"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 months after opening" />
                </LinearLayout>
            </LinearLayout>

            <!-- Do Not Use Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_do_not_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DO NOT USE WITH"
                app:backgroundTint="@null"
                android:background="@drawable/rounded_button"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/layout_info_row"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Chips Section -->
            <RelativeLayout
                android:id="@+id/layout_chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_do_not_use"
                android:layout_marginTop="8dp"
                android:padding="4dp">

                <!-- Left Chips -->
                <LinearLayout
                    android:id="@+id/linear_left_chips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="16dp"
                        android:text="Copper Peptides"
                        android:background="@drawable/round"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:text="Retinoids             "
                        android:background="@drawable/round"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:text="Direct Acid 8%    "
                        android:background="@drawable/round"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Right Chips -->
                <LinearLayout
                    android:id="@+id/linear_right_chips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Direct Vitamin C"
                        android:background="@drawable/round"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:text="Niacinamide 8%"
                        android:background="@drawable/round"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Hyaluronic Acid"
                        android:background="@drawable/round"
                        android:textColor="@color/black" />
                </LinearLayout>

            </RelativeLayout>

            <!-- Add to Routine Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_routine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD TO ROUTINE"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/white"
                android:layout_below="@id/layout_chips"
                android:layout_marginTop="16dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>