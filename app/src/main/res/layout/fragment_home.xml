<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trip_color"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- Logo ImageView on the top left -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/baseline_person_24" />

    <!-- Search Section -->
    <LinearLayout
        android:id="@+id/search_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/logo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:background="@drawable/rounded_square"
            android:drawableStart="@drawable/outline_search_24"
            android:textColorHint="@color/Semi_black"
            android:hint="Search..."
            android:inputType="text"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_section"
        android:layout_marginTop="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="18dp"
                android:text="Our Beauty Products"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <!-- Place Details Section -->
            <LinearLayout
                android:id="@+id/place_details_section"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <!-- FrameLayout to overlay text on ImageView -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp">

                    <ImageView
                        android:id="@+id/place_image"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/slider" />

                    <LinearLayout
                        android:id="@+id/des_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="10dp">

                        <TextView
                            android:id="@+id/text_overlay1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beauty Hub \nRetinol"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:padding="5dp"/>

                        <TextView
                            android:id="@+id/text_overlay2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Rs.2300"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:padding="10dp"
                            android:background="@color/Color_RS" />

                        <TextView
                            android:id="@+id/text_overlay3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Tandi, Chitwan"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:padding="5dp"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Recommendation Text at the bottom -->

            <!-- Card with Image and Texts -->
            <TextView
                android:id="@+id/recommendation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:text="25% off on all Products"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recommendation_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:text="Popular SkinCare Products"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <!-- Image 1 with Text Overlay -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/niacinamide" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="8dp"
                        android:text="Niacinamide"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:gravity="center"/>
                </FrameLayout>

                <!-- Image 2 with Text Overlay -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="20dp">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/salycilic_acid" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="8dp"
                        android:text="Salycilic Acid"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="4dp"
                        android:gravity="center"/>
                </FrameLayout>

                <!-- Image 3 with Text Overlay -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/glycolic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="8dp"
                        android:text="Glycolic Acid"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:gravity="center"/>
                </FrameLayout>
            </LinearLayout>




        </LinearLayout>
    </ScrollView>






</RelativeLayout>