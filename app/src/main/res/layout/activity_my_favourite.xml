<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyFavouriteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:background="@android:color/transparent"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/back" />

            <!-- Title -->
            <TextView
                android:id="@+id/text_skin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Favorites"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@id/btn_back" />

            <!-- Product Title -->
            <TextView
                android:id="@+id/text_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin C Suspension 23% + HA Spheres 2%"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/text_skin_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <!-- Product Image -->
            <ImageView
                android:id="@+id/image_product"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@drawable/vitaminc"
                android:layout_below="@id/text_product_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp" />

            <!-- Favorite Button -->
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_heart"
                android:background="@android:color/transparent"
                android:layout_below="@id/image_product"
                android:layout_alignStart="@id/image_product"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/heart" />

            <!-- Bag Button -->
            <ImageButton
                android:id="@+id/btn_bag"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_shopping_bag_24"
                android:background="@android:color/transparent"
                android:layout_alignTop="@id/btn_favorite"
                android:layout_alignEnd="@id/image_product"
                android:contentDescription="@string/bag" />

            <!-- Description -->
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitamin C Suspension 23% in HA Spheres uses direct vitamin C and hyaluronic acid to help visibly reduce signs of aging by brightening and balancing uneven skin tone. This water-free formula provides 23% pure L-Ascorbic Acid which remains completely stable due to the absence of water. What’s more, this water-free formula is supported with spheres of hyaluronic acid for added hydration.\n\nNote: The slightly granular texture of this product is due to the vitamin C powder being suspended in an oil-like base and therefore each application requires a few seconds to feel absorbed by the skin. If desired, this formula can be diluted in a cream base per application to allow the skin to build tolerance over time."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_below="@id/btn_favorite"
                android:layout_marginTop="16dp" />

            <!-- How to Use Title -->
            <TextView
                android:id="@+id/text_how_to_use_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to use"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@id/text_description"
                android:layout_marginTop="16dp" />

            <!-- How to Use Content -->
            <TextView
                android:id="@+id/text_how_to_use_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Apply a small amount to the face once daily, ideally in the evening.\n• Avoid the eye contour and contact with eyes. Use sun protection during the day.\n• A tingling sensation can be expected; if the sensation is too strong, the formula can be mixed with other oils of your preference before each application to reduce the strength.\n• If irritation occurs, rinse off, cease use, and consult a physician.\n• Use only as directed on unbroken skin.\n• Patch testing prior to use is advised."
                android:textSize="14sp"
                android:layout_below="@id/text_how_to_use_title"
                android:layout_marginTop="8dp" />

            <!-- Info Row -->
            <LinearLayout
                android:id="@+id/layout_info_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@id/text_how_to_use_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="When to use"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use in PM" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good for"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 months after opening" />
                </LinearLayout>
            </LinearLayout>

            <!-- Do Not Use Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_do_not_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DO NOT USE WITH"
                app:backgroundTint="@null"
                android:background="@drawable/rounded_button"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/layout_info_row"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Chips Section -->
            <RelativeLayout
                android:id="@+id/layout_chips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_do_not_use"
                android:layout_marginTop="8dp"
                android:padding="4dp">

                <!-- Left Chips -->
                <LinearLayout
                    android:id="@+id/linear_left_chips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="16dp"
                        android:text="Copper Peptides"
                        android:background="@drawable/round"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:text="Retinoids             "
                        android:background="@drawable/round"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:text="Direct Acid 8%    "
                        android:background="@drawable/round"
                        android:textColor="@color/black" />
                </LinearLayout>

                <!-- Right Chips -->
                <LinearLayout
                    android:id="@+id/linear_right_chips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Direct Vitamin C"
                        android:background="@drawable/round"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:text="Niacinamide 8%"
                        android:background="@drawable/round"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Hyaluronic Acid"
                        android:background="@drawable/round"
                        android:textColor="@color/black" />
                </LinearLayout>

            </RelativeLayout>

            <!-- Add to Routine Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_routine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD TO ROUTINE"
                android:background="@drawable/rounded_button"
                app:backgroundTint="@null"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/white"
                android:layout_below="@id/layout_chips"
                android:layout_marginTop="16dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>