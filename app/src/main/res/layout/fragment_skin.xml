<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".SkinFragment">


    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        android:contentDescription="@string/des1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp" />

    <!-- Settings Button -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_settings_24"
        android:contentDescription="@string/des2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello User Abc"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let Us Know About Your Skin."
        android:textSize="14sp"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <!-- Instruction -->
    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wash your face with a gentle cleanser and wait 15 - 30 minutes, then choose the icon that matches how your skin looks and feels."
        android:textSize="14sp"
        android:gravity="center"
        android:layout_below="@id/tv_subtitle"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_centerHorizontal="true" />

    <!-- Skin Options Container -->
    <GridLayout
        android:id="@+id/grid_skin_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_below="@id/tv_instruction"
        android:layout_marginTop="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false">

        <!-- Dry Skin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:id="@+id/btnDrySkin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/dryskin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dry skin"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Oily Skin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:id="@+id/btnOilySkin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/oilyskin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oily skin"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Normal Skin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:id="@+id/btnNormalSkin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/normalskin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal skin"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Combination Skin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp">

            <ImageView
                android:id="@+id/btnCombinationSkin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/combination_skin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Combination skin"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </GridLayout>

</RelativeLayout>






