<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrySkinActivity">


    <!-- Back Button aligned to left -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Title centered horizontally on same line -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dry Skin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/back_button" />


    <LinearLayout
        android:id="@+id/dry_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/title_text"
        android:padding="10dp">

        <ImageView
            android:id="@+id/Dry_skin"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/dryskin" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dry Skin"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:layout_below="@id/dry_img" />

    <TextView
        android:id="@+id/Greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.9"
        android:gravity="start"
        android:padding="10dp"
        android:text="Your skin is dry and lacks moisture. The right skincare products will nourish your skin, repair its critical barrier and prevent moisture loss."
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/welcome_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is it your skin type?"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:layout_below="@id/Greeting_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Skin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:minHeight="30dp"
        android:padding="20dp"
        android:text="@string/dry_skin"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_below="@id/welcome_text1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Skin_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_try"
        android:minHeight="30dp"
        android:padding="16dp"
        android:text="@string/try_again"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:layout_below="@id/Skin_button"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@null" />


</RelativeLayout>